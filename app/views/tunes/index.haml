
.pagination
  - [["Favorites", nil], ["Recent", "recent"], ].each do |name, param|
    - if params[:order] == param
      %em.current= name
    - else
      = link_to name, tunes_path(order: param)

= will_paginate @tunes

= form_tag tunes_path, :method => 'get' do
  = hidden_field_tag 'order', params[:order]
  %input(type="text" placeholder="Search for..." name="search")

%tunes
  - if @tunes.size > 0
    = render @tunes
  - else
    %h2 No results
    %a(href="#{tunes_path}") Back to Tunes

= will_paginate @tunes
