- link_path ||= tune_path(tune)
- class_variation = defined?(variation) ? "grid": ""

%card(class="#{class_variation}")
  .outline
    .details
      .title= tune.display_title
      .description= markdown tune.description
      .actions
        %a(href="#{link_path}")
          = pluralize(tune.score, "Reax")
          👍
        %a(href="#{link_path}")
          = pluralize(tune.comments_count, "Comment")
          💬
  = card_attribution tune
