- link_path ||= sprite_path(sprite)

- if admin?
  = form_for sprite, url: { id: sprite.id, controller: :sprites, action: :suppress } do |form|
    = form.button "🔨"

%card
  .outline
    = link_to image_tag(sprite.image_url, :alt => sprite.display_name), link_path
    .details
      .title= link_to sprite.title, link_path
      .description= markdown sprite.description
      .actions
        %a(href="#{link_path}")
          = pluralize(sprite.score, "Reax")
          👍
        %a(href="#{link_path}")
          = pluralize(sprite.comments_count, "Comment")
          💬
  %creator
    = link_to user_path(sprite.user) do
      = image_tag(sprite.user.avatar.url(:thumb), :alt => sprite.user.display_name)
      = sprite.user.display_name
